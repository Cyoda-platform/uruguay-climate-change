# Uruguay Climate Change Monitoring System
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# ============================================
# Flask Backend Configuration
# ============================================
FLASK_APP=backend/app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================
# API Keys
# ============================================

# Google Gemini AI (Required)
# Get your key at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Cyoda MCP Integration (Optional - for bonus features)
# Deploy Cyoda environment at ai.cyoda.net and ask for credentials in the chatbot
CYODA_API_KEY=your_cyoda_api_key_here
CYODA_API_URL=https://client-ID.eu.cyoda.net

# ============================================
# Paths
# ============================================
MODEL_PATH=./models
DATA_PATH=./src/data
LOG_PATH=./logs

# ============================================
# Ports
# ============================================
BACKEND_PORT=5000
FRONTEND_PORT=3000

# ============================================
# Redis Cache (Optional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Frontend Configuration
# ============================================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENABLE_GEMINI=true
REACT_APP_ENABLE_CYODA=true
